<div class="well titulos" ng-show="hc.booleanForm">
    <h2><span class="font-semi-bold">Ingrese un producto</span> <span class="smaller">nuevo</span></h2>
    <form class="form-horizontal" role="form">
        <div class="form-group">
            <label for="inputNombre" class="col-sm-2 control-label"> Nombre: <br/></label>
            <div class="col-sm-10">
                <input id="inputNombre" type="text" class="form-control" placeholder="Nombre producto" name="nombre" ng-model="hc.newProduct.nombre"/><br/>
            </div>
        </div>
        <div class="form-group">
            <label for="inputDescripcion" class="col-sm-2 control-label"> Descripción: <br/></label>
            <div class="col-sm-10">
                <textarea id="inputDescripcion" type="text" class="form-control" rows="3" name="descripcion" ng-model="hc.newProduct.descripcion"></textarea><br/>
            </div>
        </div>
        <div class="form-group">
            <label for="inputInventario" class="col-sm-2 control-label"> Inventario: <br/></label>
            <div class="col-sm-10">
                <input id="inputInventario" type="text" class="form-control" placeholder="Número de inventario" name="inventario" ng-model="hc.newProduct.inventario"/><br/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button ng-click="hc.save()" name="form.submitted" class="btn btn-primary btn-lg active">
                    Guardar
                </button>
            </div>
        </div>
    </form>
</div>
