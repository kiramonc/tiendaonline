<!DOCTYPE html>
<html lang="${request.locale_name}">
<head>
    <!--<meta http-equiv="Content-Type" content="text/html;charset=UTF-8"/>-->
    <meta charset="utf-8">
    <link rel="shortcut icon" href="${request.static_url('myapp:static/img/pyramid-16x16.png')}">
    <title>Aplicación TiendaOnline</title>
    <!-- Bootstrap core CSS -->
    <link href="//oss.maxcdn.com/libs/twitter-bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this scaffold -->
    <link href="${request.static_url('myapp:static/css/theme.css')}" rel="stylesheet">
    <link href="${request.static_url('myapp:static/css/style.css')}" rel="stylesheet">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="//oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>
<body>
<div class="wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-2">
                <img class="logo img-responsive" src="${request.static_url('myapp:static/img/pyramid.png')}" alt="pyramid web framework">
            </div>
            <div class="col-md-10">
                <div class="content">
                    <div class="well titulos" ng-app="adminCarrito" ng-controller="carritoCtrl">
                        <h2><span class="font-semi-bold">¿Realmente desea desactivar la cuenta: ${user.nombre}?</span></h2>
                        <form class="form-horizontal" role="form" action="${delete_form}" method="post">
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <button type="submit" name="form.cancelar" class="btn btn-success">Cancelar</button>
                                    <button type="submit" name="form.confirmDelete" ng-click="reset()" class="btn btn-danger">Desactivar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="//oss.maxcdn.com/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="//oss.maxcdn.com/libs/twitter-bootstrap/3.0.3/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular.min.js"></script>
    <script src="${request.static_url('myapp:static/angular/angular-local-storage.min.js')}"></script>
    <script src="${request.static_url('myapp:static/angular/carrito.js')}"></script>
</body>
</html>
