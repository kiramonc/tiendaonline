<!DOCTYPE html>
<html lang="${request.locale_name}">
<head>
    <!--<meta http-equiv="Content-Type" content="text/html;charset=UTF-8"/>-->
    <meta charset="utf-8">
    <link rel="shortcut icon" href="${request.static_url('myapp:static/img/pyramid-16x16.png')}">
    <title>Aplicaci√≥n TiendaOnline</title>
    <!-- Bootstrap core CSS -->
    <link href="//oss.maxcdn.com/libs/twitter-bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this scaffold -->
    <link href="${request.static_url('myapp:static/css/theme.css')}" rel="stylesheet">
    <link href="${request.static_url('myapp:static/css/style.css')}" rel="stylesheet">
    <link href="${request.static_url('myapp:static/css/angular_validation.css')}" rel="stylesheet">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="//oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>
<body ng-app="listPedidoAdmin">
<div class="wrapper">
    <div class="container">
        <div class="row">
            <div id="header-page">
                <div class="col-md-1 "><center>
                    <img class="logo img-responsive" src="${request.static_url('myapp:static/img/pyramid.png')}" alt="pyramid web framework">
                </center>
                </div>
                <div class="col-md-11 ">
                    <ul class="nav nav-tabs nav-justified menu-principal">
                        <li role="presentation" ><a class="menu-item" href="/admin">Home</a></li>
                        <li role="presentation"><a class="menu-item" href="/user">Usuario</a></li>
                        <li role="presentation"><a class="menu-item" href="/product">Productos</a></li>
                        <li role="presentation"><a class="menu-item" href="/admin-pedidos">Pedidos</a></li>
                        <li ng-if="'${logged_in}'" role="presentation">
                            <a class="menu-item"  href="${request.application_url}/logout"><span class="glyphicon glyphicon-user" aria-hidden="true"></span>Log-out</a>
                        </li>
                    </ul>
                </div>
            </div>

            <div id="main">
                <div class="content col-md-12">
                    <div class="titulos" ng-controller="pCtrl">
                        <center><h2><span class="font-semi-bold">Administrar pedidos</span></h2></center>

                        <table class="table table-bordered table-hover">
                            <thead class="encabezado-tabla"><tr>
                                <th width="30%"><center>Usuario<br>
                                    <input placeholder="Search" ng-model="userb.cliente"/>
                                </center></th>
                                <th class="fila-tabla" width="20%" ng-click="order('fecha')">
                                    <center>Fecha <span class="sortorder pull-right" ng-class="{reverse:reverse}"></span></center>
                                </th>
                                <th width="20%">
                                    <div class="col-md-6">Estado</div>
                                    <div class="btn-group col-md-6">
                                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                             <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><a class="fila-tabla" ng-click="noAtendidos()">No atendidos</a></li>
                                            <li><a class="fila-tabla" ng-click="atendidos()">Atendidos</a></li>
                                            <li role="separator" class="divider"></li>
                                            <li><a class="fila-tabla" ng-click="nofiltrar()">Todos</a></li>
                                        </ul>
                                    </div>
                                </th>
                                <th width="30%"></th>
                            </tr></thead>
                            <tbody class="texto-centrado">
                                <tr ng-repeat="item in pedidos | filter: userb | uncheck:buscar | orderBy:predicate:reverse">
                                    <td>{{item.cliente}}</td>
                                    <td>{{item.fecha}}</td>
                                    <td>{{item.estado}}</td>
                                    <td>
                                        <center><a class="btn btn-success" role="button" href="/pedidos/{{item.id}}/admin">
                                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Detalle
                                        </a>
                                        </center>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="//oss.maxcdn.com/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="//oss.maxcdn.com/libs/twitter-bootstrap/3.0.3/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular.min.js"></script>
    <script src="${request.static_url('myapp:static/angular/pedido.js')}"></script>
</body>
</html>