<!DOCTYPE html>
<html lang="${request.locale_name}">
<head>
    <!--<meta http-equiv="Content-Type" content="text/html;charset=UTF-8"/>-->
    <meta charset="utf-8">
    <link rel="shortcut icon" href="${request.static_url('myapp:static/img/pyramid-16x16.png')}">
    <title>Aplicación TiendaOnline</title>
    <!-- Bootstrap core CSS -->
    <link href="//oss.maxcdn.com/libs/twitter-bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this scaffold -->
    <link href="${request.static_url('myapp:static/css/theme.css')}" rel="stylesheet">
    <link href="${request.static_url('myapp:static/css/style.css')}" rel="stylesheet">
    <link href="${request.static_url('myapp:static/css/angular_validation.css')}" rel="stylesheet">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="//oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>
<body ng-app="adminProducto">
<div class="wrapper">
    <div class="container">
        <div class="row">
            <div id="header-page">
                <div class="col-md-1 "><center>
                    <img class="logo img-responsive" src="${request.static_url('myapp:static/img/pyramid.png')}" alt="pyramid web framework">
                </center>
                </div>
                <div class="col-md-11 ">
                    <ul class="nav nav-tabs nav-justified menu-principal">
                        <li role="presentation" ><a class="menu-item" href="/admin">Home</a></li>
                        <li role="presentation"><a class="menu-item" href="/user">Usuario</a></li>
                        <li role="presentation"><a class="menu-item" href="/product">Productos</a></li>
                        <li role="presentation"><a class="menu-item" href="/admin-pedidos">Pedidos</a></li>
                        <li ng-if="'${logged_in}'" role="presentation">
                            <a class="menu-item"  href="${request.application_url}/logout"><span class="glyphicon glyphicon-user" aria-hidden="true"></span>Log-out</a>
                        </li>
                    </ul>
                </div>
            </div>

            <div id="main">
            <div class="content col-md-12">
                <div class="titulos" ng-controller="productoCtrl">
                    <input type="hidden" id="url" value="${uid}">
                    <h2><span class="font-semi-bold">Editando {{producto.nombre}}</span></h2>
                    <form name="editProdForm" class="form-horizontal css-form" role="form" action="${save_form}" method="post" novalidate
                          accept-charset="utf-8" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="inputNombre" class="col-sm-2 control-label"> Nombre: <br/></label>
                            <div class="col-sm-10">
                                <input id="inputNombre" type="text" class="form-control" placeholder="Nombre producto"
                                       name="nombre" ng-model="producto.nombre" required/><br/>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputDescripcion" class="col-sm-2 control-label"> Descripción: <br/></label>
                            <div class="col-sm-10">
                                <textarea id="inputDescripcion" type="text" class="form-control" rows="3"
                                          name="descripcion" ng-model="producto.descripcion" required></textarea><br/>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputPrecio" class="col-sm-2 control-label"> Precio: <br/></label>
                            <div class="col-sm-10">
                                <input id="inputPrecio" type="number" class="form-control" placeholder="Precio producto"
                                       name="precio" ng-model="producto.precio" required/><br/>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputImg" class="col-sm-2 control-label"> Imagen del producto: <br/></label>
                            <div class="col-sm-10">
                                <img class="img-responsive col-md-2" src="${request.application_url}/static/img/productos/{{producto.img}}">
                                <input id="inputImg" type="file" name="file" class="col-md-4">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputInventario" class="col-sm-2 control-label"> Inventario: <br/></label>
                            <div class="col-sm-10">
                                <input id="inputInventario" type="number" class="form-control" placeholder="Número de inventario"
                                       name="inventario" ng-model="producto.inventario" required/><br/>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" name="form.submitted" class="btn btn-success" ng-disabled="!editProdForm.$valid">Actualizar</button>
                                <button type="submit" name="form.delete" class="btn btn-danger">Eliminar</button>
                                <a href="/product" class="btn btn-default" role="button">Volver</a>
                            </div>
                        </div>
                    </form>
                </div>
                <br/>
                <br/>
            </div>
            </div>
        </div>
    </div>
</div>


    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="//oss.maxcdn.com/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="//oss.maxcdn.com/libs/twitter-bootstrap/3.0.3/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular.min.js"></script>
    <script src="${request.static_url('myapp:static/angular/add_register.js')}"></script>
  </body>
</html>
