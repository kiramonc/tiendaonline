<!DOCTYPE html>
<html lang="${request.locale_name}">
<head>
    <!--<meta http-equiv="Content-Type" content="text/html;charset=UTF-8"/>-->
    <meta charset="utf-8">
    <link rel="shortcut icon" href="${request.static_url('myapp:static/img/pyramid-16x16.png')}">
    <title>Aplicaci√≥n TiendaOnline</title>
    <!-- Bootstrap core CSS -->
    <link href="//oss.maxcdn.com/libs/twitter-bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this scaffold -->
    <link href="${request.static_url('myapp:static/css/theme.css')}" rel="stylesheet">
    <link href="${request.static_url('myapp:static/css/style.css')}" rel="stylesheet">
    <link href="${request.static_url('myapp:static/css/angular_validation.css')}" rel="stylesheet">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="//oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>
<body ng-app="adminUsuario">
<div class="wrapper">
    <div class="container">
        <div class="row">
            <div id="header-page">
                <div class="col-md-1 "><center>
                    <img class="logo img-responsive" src="${request.static_url('myapp:static/img/pyramid.png')}" alt="pyramid web framework">
                </center>
                </div>
                <div class="col-md-11 ">
                    <ul class="nav nav-tabs nav-justified menu-principal">
                        <li role="presentation" ><a class="menu-item" href="/admin">Home</a></li>
                        <li role="presentation"><a class="menu-item" href="/user">Usuario</a></li>
                        <li role="presentation"><a class="menu-item" href="/product">Productos</a></li>
                        <li role="presentation"><a class="menu-item" href="/admin-pedidos">Pedidos</a></li>
                        <li ng-if="'${logged_in}'" role="presentation">
                            <a class="menu-item"  href="${request.application_url}/logout"><span class="glyphicon glyphicon-user" aria-hidden="true"></span>Log-out</a>
                        </li>
                    </ul>
                </div>
            </div>

            <div id="main">
                <div class="content col-md-12">
                    <div class="titulos" ng-controller="usuarioCtrl as userCtrl">
                        <center><h2><span class="font-semi-bold">Lista de usuarios</span></h2></center>
                        <a href="/add-user" class="btn btn-success pull-right" role="button"><i class="glyphicon glyphicon-plus-sign"></i> Nuevo Admin</a>
                        <br/>
                        <br/>
                        <table class="table table-bordered table-hover">
                            <thead class="encabezado-tabla"><tr>
                                <th width="20%"><center>Nombre<br>
                                    <input placeholder="Search" ng-model="userb.nombre"/>
                                </center></th>
                                <th width="20%"><center>Apellido<br>
                                    <input placeholder="Search" ng-model="userb.apellido"/>
                                </center></th>
                                <th width="15%"><center>Username<br>
                                    <input placeholder="Search" ng-model="userb.username"/>
                                </center></th>
                                <th width="15%"><center>Tipo</center></th>
                                <th width="30%"></th>
                            </tr></thead>
                            <tbody>
                                <tr ng-repeat="item in userCtrl.usuarios | filter: userb">
                                    <td>{{item.nombre}}</td>
                                    <td>{{item.apellido}}</td>
                                    <td>{{item.username}}</td>
                                    <td>{{item.rol | typeuser}}</td>
                                    <td>
                                        <div class="col-md-6 col-xs-12">
                                            <a href="/user/{{item.id}}/edit" class="btn btn-success" role="button" style="width: 100%;">
                                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar
                                            </a>
                                        </div>
                                        <div class="col-md-6 col-xs-12" ng-if="item.username != '${logged_in}'">
                                            <a href="/user/{{item.id}}/delete" class="btn btn-danger" role="button" style="width: 100%;">
                                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Eliminar
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="//oss.maxcdn.com/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="//oss.maxcdn.com/libs/twitter-bootstrap/3.0.3/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular.min.js"></script>
    <script src="../static/angular/usuario.js?00.020"></script>
</body>
</html>