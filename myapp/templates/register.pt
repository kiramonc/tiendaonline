<!DOCTYPE html>
<html lang="${request.locale_name}">
<head>
    <!--<meta http-equiv="Content-Type" content="text/html;charset=UTF-8"/>-->
    <meta charset="utf-8">
    <link rel="shortcut icon" href="${request.static_url('myapp:static/img/pyramid-16x16.png')}">
    <title>Aplicaci√≥n TiendaOnline</title>
    <!-- Bootstrap core CSS -->
    <link href="//oss.maxcdn.com/libs/twitter-bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this scaffold -->
    <link href="${request.static_url('myapp:static/css/theme.css')}" rel="stylesheet">
    <link href="${request.static_url('myapp:static/css/style.css')}" rel="stylesheet">
    <link href="${request.static_url('myapp:static/css/angular_validation.css')}" rel="stylesheet">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="//oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>
<body ng-app="adminUsuario">
<div class="wrapper">
    <div class="container">
        <div class="row">
            <div id="header-page">
                <div class="col-md-1 "><center>
                    <img class="logo img-responsive" src="${request.static_url('myapp:static/img/pyramid.png')}" alt="pyramid web framework">
                </center>
                </div>
                <div class="col-md-11 ">
                    <ul class="nav nav-tabs nav-justified menu-principal">
                        <li role="presentation" ><a class="menu-item" href="/">Home</a></li>
                        <li role="presentation"><a class="menu-item" href="/productos">Productos</a></li>
                    </ul>
                </div>
            </div>

            <div id="main">
                <div class="content col-md-12">
                    <div class="titulos" ng-controller="usuarioCtrl as userCtrl">
                        <div class="col-md-8">
                            <h3><span class="smaller">Registro</span></h3><br/>
                            <form name="formCrearUser" class="form-horizontal" role="form" action="${save_form}" ng-submit="userCtrl.submitForm(formData)" method="post" novalidate>
                                <div class="form-group">
                                    <label for="inputNombre" class="col-sm-2 control-label"> Nombre: <br/></label>
                                    <div class="col-sm-10">
                                        <input id="inputNombre" type="text" class="form-control" placeholder="Nombre" name="nombre" ng-model="userCtrl.formData.nombre" required
                                         ng-class="{error:!formCrearUser.$pristine && formCrearUser.nombre.$error.required}">
                                        <br/>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputApellido" class="col-sm-2 control-label"> Apellido: <br/></label>
                                    <div class="col-sm-10">
                                        <input id="inputApellido" type="text" class="form-control" placeholder="Apellido" name="apellido" ng-model="userCtrl.formData.apellido" required
                                        ng-class="{error:!formCrearUser.$pristine && formCrearUser.apellido.$error.required}"/>
                                        <br/>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputUsername" class="col-sm-2 control-label"> Username: <br/></label>
                                    <div class="col-sm-10">
                                        <input id="inputUsername" type="text" class="form-control" placeholder="Username" name="username" ng-model="userCtrl.formData.username" required
                                        ng-class="{error:!formCrearUser.$pristine && formCrearUser.username.$error.required}">
                                        <br/>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputPassword" class="col-sm-2 control-label"> Password: <br/></label>
                                    <div class="col-sm-10">
                                        <input id="inputPassword" type="password" class="form-control" placeholder="Password" name="password" ng-model="userCtrl.formData.password" required
                                        ng-class="{error:!formCrearUser.$pristine && formCrearUser.password.$error.required}">
                                        <br/>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <input id="inputRol" type="hidden" class="form-control" name="rol" ng-model="userCtrl.formData.rol" value="admins"/>

                                        <span ng-show="!formCrearUser.$pristine && formCrearUser.$invalid">Hay errores en el formulario</span>
                                        <br/>
                                        <button type="submit" name="form.submitted" class="btn btn-success" ng-disabled="!formCrearUser.$valid">Registrarse</button>
                                    </div>
                                </div>
                            </form>
                        </div>

                        <div class="col-md-4">
                            <center>
                                <h2><span class="font-semi-bold">Crea tu cuenta</span></h2>
                                <br/>
                            </center>
                            <center>
                                <img class="logo img-responsive img-rounded" width="90%" src="${request.static_url('myapp:static/img/register.png')}">
                                <br/>
                                <h2><span class="smaller">Accede a todos los servicios</span></h2>
                            </center>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="//oss.maxcdn.com/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="//oss.maxcdn.com/libs/twitter-bootstrap/3.0.3/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular.min.js"></script>
    <script src="../static/angular/usuario.js?00.001"></script>
</body>
</html>
